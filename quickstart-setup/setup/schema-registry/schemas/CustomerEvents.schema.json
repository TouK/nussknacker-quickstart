{
  "type": "object",
  "title": "CustomerEvent",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [
    "customerId",
    "eventType"
  ],
  "properties": {
    "customerId": {
      "description": "The customer unique identifier",
      "type": "string"
    },
    "eventType": {
      "description": "Type of event",
      "type": "string",
      "enum": [
        "ClientCloseToShowroom",
        "ClientBrowseOffers",
        "ClientEndedCallWithCustomerService",
        "ClientSentTerminationLetter",
        "Other"
      ]
    }
  }
}
